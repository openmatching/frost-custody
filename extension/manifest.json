{
    "manifest_version": 3,
    "name": "FROST Wallet - P2P MPC",
    "version": "0.1.0",
    "description": "Peer-to-peer MPC wallet using FROST threshold signatures",
    "permissions": [
        "storage",
        "sidePanel"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "action": {
        "default_title": "FROST Wallet"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}