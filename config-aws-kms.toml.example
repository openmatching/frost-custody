[network]
type = "mainnet"

[server]
role = "node"
host = "0.0.0.0"
port = 4000

[node]
index = 0
storage_path = "/data/frost-shares-node0"
max_signers = 3
min_signers = 2

# AWS KMS Configuration
[node.key_provider]
type = "aws-kms"
key_id = "arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012"

# Or use key alias:
# key_id = "alias/frost-node-0"

# AWS credentials are read from environment:
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_DEFAULT_REGION=us-east-1

# Or from ~/.aws/credentials (recommended for production)
# Or from EC2/ECS instance role (best for production)

