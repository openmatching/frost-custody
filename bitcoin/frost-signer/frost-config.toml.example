[network]
type = "bitcoin"  # or "testnet", "signet", "regtest"

[frost]
# Node index: 0, 1, or 2
node_index = 0

# Threshold configuration
min_signers = 2  # Need 2 signatures
max_signers = 3  # Total 3 participants

# FROST key package (SECRET - unique per node)
# Generate with: cargo run --bin frost-keygen
key_package_hex = "REPLACE_WITH_OUTPUT_FROM_KEYGEN"

# FROST public key package (PUBLIC - same on all nodes)
pubkey_package_hex = "REPLACE_WITH_OUTPUT_FROM_KEYGEN"

[server]
host = "0.0.0.0"
port = 4000

